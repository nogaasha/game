{
  "parser": "babel-eslint",
  "root": true,
  "extends": [
    "airbnb",
    "plugin:react/recommended"
  ],
  "globals": {
    "document": true
  },
  // "eslint.options": {
  //   "devel": true
  // },
  "rules": {
    "semi": "off",
    "arrow-body-style": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "max-len": [
      "warn",
      {
        "ignoreComments": true,
        "ignoreStrings": true,
        "code": 240
      }
    ]
  }
}